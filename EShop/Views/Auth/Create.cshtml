@model UserModel

@{
    ViewData["Title"] = "Đăng ký";
}

<section>
    <div class="container py-5 h-100">
        <div class="row d-flex align-items-center justify-content-center h-100 ">
            <div class="centered-box">
                <form asp-action="Create" asp-controller="Auth">
                    <!-- Email input -->
                    <div data-mdb-input-init class="">
                        <label for="UserName">Tên đăng nhập:</label>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                        <input asp-for="UserName" class="form-control" />
                    </div>
                    <div data-mdb-input-init class="">
                        <label for="UserName">Email:</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <input asp-for="Email" class="form-control" />
                    </div>
                    <!-- Password input -->
                    <div data-mdb-input-init class="">
                        <label for="Password">Mật khẩu:</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <input asp-for="Password" class="form-control" type="password" />
                    </div>

                    <div data-mdb-input-init class="">
                        <label for="PhongNumber">Số điện thoại:</label>
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        <input asp-for="PhoneNumber" class="form-control" type="number"/>
                    </div>

                    <div class="d-flex justify-content-around align-items-center mb-4">
                        <!-- Checkbox -->
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="form1Example3" checked />
                            <label class="form-check-label" for="form1Example3"> Remember me </label>
                        </div>
                        <a asp-action="Login" asp-controller="Auth">trở về trang đăng nhập</a>
                    </div>

                    <!-- Submit button -->
                    <div class="buttonLogin">
                        <button data-mdb-button-init data-mdb-ripple-init>
                            <p>Đăng Ký</p>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}