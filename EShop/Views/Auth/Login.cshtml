@model LoginViewModel

@{
    ViewData["Title"] = "Đăng nhập";
}

<section>
    <div class="container py-5 h-100">
        <div class="row d-flex align-items-center justify-content-center h-100 ">
            <div class="centered-box">
                <form asp-action="Login" asp-controller="Auth">
                    <!-- Email input -->
                    <div data-mdb-input-init class="">
                        <label for="UserName">Tên đăng nhập:</label>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                        <input asp-for="UserName" class="form-control" />
                    </div>

                    <!-- Password input -->
                    <div data-mdb-input-init class="">
                        <label for="Password">Mật khẩu:</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <input asp-for="Password" class="form-control" type="password" />
                    </div>

                    <div class="d-flex justify-content-around align-items-center mb-4">
                        <!-- Checkbox -->
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="form1Example3" checked />
                            <label class="form-check-label" for="form1Example3"> Remember me </label>
                        </div>
                        <a asp-action="Create" asp-controller="Auth" >bạn chưa có tài khoản?</a>
                    </div>

                    <!-- Submit button -->
                    <div class="buttonLogin">
                        <button data-mdb-button-init data-mdb-ripple-init>
                            <p>Đăng Nhập</p>
                        </button>
                    </div>

                    <div class="divider d-flex align-items-center my-4">
                        <p class="text-center fw-bold mx-3 mb-0 text-muted">OR</p>
                    </div>

                </form>
                <div class="buttonLogin" style="display:flex; align-content:space-between">
                    <button>
                        <i class="fa-brands fa-facebook"></i>
                        <p>
                            Facebook
                        </p>
                    </button>
                    <form  asp-action="GoogleLogin" asp-controller="Auth" method="post">
                        <button type="submit" >
                            <i class="fa-brands fa-facebook"></i>
                            <p>
                                Gmail
                            </p>
                        </button>
                    </form>
                </div>

            </div>
        </div>
    </div>
</section>
@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}